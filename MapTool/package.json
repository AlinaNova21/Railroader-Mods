{
  "type": "module",
  "scripts": {
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/**/*.ts",
      "package.json"
    ],
    "ext": "ts",
    "ignore": ["*game-graph.json", "dist/**/*.*"],
    "exec": "ts-node ./src/app.ts --project ./tsconfig.json"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "date-fns": "^3.3.1",
    "jszip": "^3.10.1",
    "rollup": "^4.12.1",
    "three": "^0.162.0",
    "threejs-math": "^0.147.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/date-fns": "^2.6.0",
    "@types/node": "^20.11.24",
    "@types/three": "^0.162.0",
    "nodemon": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "vite": "^5.1.5"
  }
}
